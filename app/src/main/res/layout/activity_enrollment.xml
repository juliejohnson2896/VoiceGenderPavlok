<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enrollment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Add below your statusText and recordButton -->
    <com.juliejohnson.voicegenderpavlok.ui.WaveformView
        android:id="@+id/waveform_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the button to record your voice"
        android:textSize="18sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/record_masculine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Masculine Sample" />

    <Button
        android:id="@+id/record_feminine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Feminine Sample" />

    <Button
        android:id="@+id/record_androgynous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Androgynous Sample" />
</LinearLayout>
